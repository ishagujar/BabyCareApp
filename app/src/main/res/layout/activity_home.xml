<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <TextView
        android:id="@+id/textViewApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/fredokaone"
        android:text="Baby Care"
        android:textColor="@color/yellow_primary_dark"
        android:textSize="50sp" />

    <Button
        android:id="@+id/buttonmp"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="196dp"
        android:background="@color/google_blue"
        android:text="My profile"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonvd"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonmp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="1dp"
        android:background="@color/google_blue"
        android:text="Vaccine details"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonhc"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonvd"
        android:layout_alignParentTop="true"
        android:layout_marginTop="371dp"
        android:layout_marginEnd="1dp"
        android:background="@color/google_blue"
        android:text="Health care"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonlc"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonhc"
        android:layout_alignParentTop="true"
        android:layout_marginTop="463dp"
        android:layout_marginEnd="0dp"
        android:background="@color/google_blue"
        android:text="Lullaby"
        android:textColor="@color/white" />


</RelativeLayout>